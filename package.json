    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.1.3",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.0",
    "ws": "^8.16.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.30",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.1.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
