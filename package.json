{
  "name": "lynk-agent-chat",
  "version": "1.0.0",
  "description": "Real-time AI chat system with WebSocket support",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js & node dist/api/discord-bot.js",
    "dev:server": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node src/server.ts\"",
    "dev:bot": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node src/api/discord-bot.ts\"",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:bot\"",
    "build": "tsc",
    "render-build": "chmod +x build.sh && ./build.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.17",
    "@ai-sdk/openai": "^1.3.22",
    "@pinecone-database/pinecone": "^6.0.1",
    "@shopify/shopify-api": "^11.12.0",
    "ai": "^4.3.15",
    "and": "^0.0.3",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "discord.js": "^14.21.0",
    "docx": "^9.5.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "jsdom": "^26.1.0",
    "marked": "^15.0.11",
    "mongoose": "^8.1.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "openai": "^4.98.0",
    "ws": "^8.16.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.7",
    "@types/nodemailer": "^6.4.17",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
