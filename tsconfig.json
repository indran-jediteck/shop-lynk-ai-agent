{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                          // ✅ Use ESM
    "moduleResolution": "NodeNext",              // ✅ ESM-aware resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true         // ✅ Needed for `import fetch from`
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
